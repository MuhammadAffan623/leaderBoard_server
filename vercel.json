{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["src/**/*", ".env"] }
    }
  ],
  "routes": [
    {
      "src": "/api/cron",
      "dest": "/api/cron.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.ts"
    }
  ]
}
